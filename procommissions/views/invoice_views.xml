<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_inherit_commission_info" model="ir.ui.view">
        <field name="name">account.move.form.inherit.commission.info</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Commission Information">
                    <group>
                        <field name="commission_id" string="Commission Document" readonly="1"/>
                        <field name="related_quote" string="Related Quote"/>
                        <field name="related_lead" string="Related Lead" readonly="1">
                            <attribute name="help">You can edit this on the related quote document.</attribute>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>