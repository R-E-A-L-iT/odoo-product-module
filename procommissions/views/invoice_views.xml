<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_inherit_source_order" model="ir.ui.view">
        <field name="name">account.move.form.source.order</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Locate the Delivery Date field in the Other Info tab -->
            <xpath expr="//page[@name='other_info']/group/field[@name='invoice_date_due']" position="after">
                <field name="source_order" string="Source Order"/>
            </xpath>
        </field>
    </record>
</odoo>