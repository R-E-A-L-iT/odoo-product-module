<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="procom_commissions_view_tree">
        <field name="name">ProCommissions Tree View</field>
        <field name="model">procom.commission</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree string="Commissions List">
                <field name="invoice_id" string="Invoice"/>
                <!-- <field name="partner_id" string="Customer"/> -->
                <!-- <field name="invoice_date" string="Invoice Date"/> -->
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="procom_commissions_view_form">
        <field name="name">procom.commission.view.form</field>
        <field name="model">procom.commission</field>
        <field name="arch" type="xml">
            <form string="Commission">
                <sheet>
                    <field name="name" string="Commission Name"/>
                    <notebook>
                        <page string="Salespeople">
                            <group>
                                <field name="invoice_id" string="Invoice"/>
                                <!-- <field name="partner_id" string="Customer"/> -->
                                <!-- <field name="invoice_date" string="Invoice Date"/> -->
                                <!-- <field name="salesperson_one" string="Salesperson #1"/> -->
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

