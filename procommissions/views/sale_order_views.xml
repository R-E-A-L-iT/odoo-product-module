<odoo>
    <record id="view_order_form_inherit_demo_by" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.demo.by</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="demo_by" string="Demo By"/>
            </xpath>
        </field>
    </record>
</odoo>