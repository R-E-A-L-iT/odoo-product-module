<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="live_chet_session_started_email" model="mail.template">
            <field name="name">LiveChat: Session Started</field>
            <field name="model_id" ref="im_livechat.model_im_livechat_channel"/>
            <field name="subject">New Live Chat Session</field>
            <field name="email_from">{{ (object.user_id.email_formatted or object.company_id.email_formatted or
                user.email_formatted) }}
            </field>
            <field name="body_html" type="html">
                <div>
                    <p>Hello,</p>
                    <p>
                        A new live chat session has started in the channel: <b>channel_name</b>.
                    </p>
                    <p>
                        Please join the session to assist the customer.
                    </p>
                    <p>Thank you.</p>
                </div>
            </field>
            <field name="email_layout_xmlid">mail.mail_notification_light</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>