<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="web_base" name="Website Base" inherit_id="web.layout" priority="17">
		<xpath expr="//head//script[1]" position="before">
			<!-- Google Tag Manager -->
			<script src="/static/JS/analytics.js" />
			<!-- End Google Tag Manager -->
		</xpath>
		<xpath expr="//body/t" position="before">
			<!-- Google Tag Manager (noscript) -->
			<noscript>
				<iframe src="https://www.googletagmanager.com/ns.html?id=GTM-P29CMWQ"
					height="0" width="0" style="display:none;visibility:hidden"></iframe>
			</noscript>
			<!-- End Google Tag Manager (noscript) -->
		</xpath>
	</template>
</odoo>