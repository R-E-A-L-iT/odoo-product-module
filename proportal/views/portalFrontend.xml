<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="r_portal_custom" name="Customized Portal Interface" inherit_id="portal.portal_my_home" priority="1">
        <t t-call="portal.portal_layout">

            <style>
            .r_portal_container {
                display: flex;
                flex-wrap: wrap;
                width: 80vw;
                margin: 0 auto;
            }

            .r_portal_inner {
                flex-basis: 50%;
                flex-grow: 1;
            }

            .r_portal_inner:nth-of-type(1) {
                background: red;
            }

            .r_portal_inner:nth-of-type(2) {
                background: gold;
            }

            .r_portal_inner:nth-of-type(3) {
                background: green;
            }

            .r_portal_inner:nth-of-type(4) {
                background: blue;
            }
        </style>

            <div class="r_portal_container">
                <!-- Documents -->
                <div class="r_portal_inner">
                    <h1>Testing.</h1>
                </div>
                <!-- Products -->
                <div class="r_portal_inner"></div>
                <!-- Support -->
                <div class="r_portal_inner"></div>
                <!-- Info -->
                <div class="r_portal_inner"></div>
            </div>
        </t>
    </template>
</odoo>