<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template name="carousel" id="carousel" inherit_id="website_sale.shop_product_carousel" priority="99">
		<xpath expr="//t[@t-foreach]" position="replace">
			<t t-foreach="product.ecom_media" t-as="c">
				<span t-out="str(product.sku) + '-' + str(c_index) + '.jpg'"></span>
				<img t-if="c == 'J'" t-attf-alt="str(product.sku) + index" t-attf-src="str(product.sku) + '-' + str(index) + '.jpg'" />
				<img t-if="c != 'J'" t-attf-alt="str(product.sku) + index" t-attf-src="str(product.sku) + '-' + str(index) + '.png'" />
			</t>
		</xpath>
	</template>
</odoo>