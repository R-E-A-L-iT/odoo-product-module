<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template name="carousel" id="carousel" inherit_id="website_sale.shop_product_carousel" priority="99">
		<xpath expr="//t[@t-foreach]" position="replace">
			<t t-foreach="product.ecom_media" t-as="c">
				<img t-if="c == 'J'" t-attf-alt="{{str(product.sku) + ': ' + str(c_index + 1)}}" t-attf-src="https://cdn.r-e-a-l.it/images/ecommerce/{{product.ecom_folder}}/{{product.sku}}/{{product.sku}}-{{'{:02}'.format(c_index + 1)}}.png" />
				<img t-if="c == 'P'" t-attf-alt="{{str(product.sku) + ': ' + str(c_index + 1)}}" t-attf-src="https://cdn.r-e-a-l.it/images/ecommerce/{{product.ecom_folder}}/{{product.sku}}/{{product.sku}}-{{'{:02}'.format(c_index + 1)}}.png" />
			</t>
		</xpath>
	</template>
</odoo>