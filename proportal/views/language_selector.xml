<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template name="language selector" id="lang-control" inherit_id="portal.language_selector">
        <xpath expr="//div" position="after">
            <div class="lang_div">
                <t>
                    <a
                        t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang_code='en_US')"
                        data-url_code="en" class="js_change_lang active"
                        style="cursor: pointer">
                        EN
                    </a>
                    <span>|</span>
                    <a
                        t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang_code='fr_CA')"
                        data-url_code="fr_CA" class="js_change_lang active"
                        style="cursor: pointer">
                        FR
                    </a>
                </t>
            </div>
        </xpath>
    </template>
</odoo>