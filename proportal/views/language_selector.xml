<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="lang-control" inherit_id="portal.language_selector">
        <xpath expr="//div" position="after">
            <div>
                <a style="cursor: pointer">EN</a>
                <span>|</span>
                <a style="cursor: pointer">FR</a>
            </div>
        </xpath>
    </template>
</odoo>