<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="proportal.navbar" name="Proportal navbar" inherit_id="portal.frontend_layout">
        <xpath expr="//div[@id='wrapwrap']/header" position="replace">
            <nav id="custom-navbar" class="navbar navbar-expand">
                <div class="container">
                    <a href="/" class="navbar-brand logo" id="custom-navbar-logo">
                        <img src="https://cdn.r-e-a-l.it/images/icons/product-cycle.gif"
                        t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                    </a>
                </div>
                <div id="Menu-Links">
                    <ul>
                        <li>
                            <a href="/contact">CONTACT</a>
                        </li>
                        <li>
                            <a href="/en_CA/livechat">SUPPORT</a>
                        </li>
                        <li>
                            <a href="/my/home">MY.R-E-A-L.iT</a>
                        </li>
                        <li>
                            <a t-if="is_connected" href="/web/session/logout?redirect=/">LOGOUT</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </xpath>
    </template>
</odoo>