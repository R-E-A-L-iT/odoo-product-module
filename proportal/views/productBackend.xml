<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="proquotes_product_view" model="ir.ui.view">
        <field name="name">Backend Product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name=&quot;default_code&quot;]" position="before">
                <t t-set="product_type" t-value="object.type_selection" data-oe-t-inline="true"/>
                <field t-if="product_type == 'S'" name="ccp_status" invisible="0" />
            </xpath>
        </field>
    </record>
</odoo>