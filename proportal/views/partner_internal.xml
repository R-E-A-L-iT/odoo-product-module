<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="res_partner_form_real_proportal" model="ir.ui.view">
        <field name="name">Partner.Backend.Form.real.proportal</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='title']" position="after">
                <field name="company_nickname" invisible="not is_company" />
            </xpath>
        </field>
    </record>
</odoo>