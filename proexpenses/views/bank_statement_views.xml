<odoo>
    <record id="view_bank_statement_line_kanban_inherit" model="ir.ui.view">
        <field name="name">account.bank.statement.line.kanban.inherit</field>
        <field name="model">account.bank.statement.line</field>
        <field name="inherit_id" ref="account_accountant.view_bank_statement_line_kanban_bank_rec_widget"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_field_many2many_tags o_field_widget d-flex flex-row flex-nowrap']" position="after">
                <button type="object"
                        name="action_transfer_expense"
                        class="btn btn-primary btn-sm mt-1"
                        string="Transfer">
                    Transfer
                </button>
            </xpath>
        </field>
    </record>
    
    <record id="view_expense_transfer_wizard_form" model="ir.ui.view">
        <field name="name">expense.transfer.wizard.form</field>
        <field name="model">expense.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Transfer Expense">
                <group>
                    <field name="company_id"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_transfer" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_expense_transfer_wizard" model="ir.actions.act_window">
        <field name="name">Transfer Expense</field>
        <field name="res_model">expense.transfer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
