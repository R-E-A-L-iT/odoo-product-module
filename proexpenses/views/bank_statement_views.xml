<odoo>
    <record id="view_bank_statement_line_kanban_inherit" model="ir.ui.view">
        <field name="name">account.bank.statement.line.kanban.inherit</field>
        <field name="model">account.bank.statement.line</field>
        <field name="inherit_id" ref="account_accountant.view_bank_statement_line_tree_bank_rec_widget"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='narration']" position="after">
                <!-- Add a group below the notes field -->
                <div class="o_kanban_group mt-3">
                    <div class="o_kanban_group_title">
                        <strong>Transfer Expense</strong>
                    </div>
                    <div class="o_kanban_group_content">
                        <button type="object"
                                name="action_transfer_expense"
                                class="btn btn-primary btn-sm"
                                string="Transfer to">
                            Transfer to
                        </button>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
