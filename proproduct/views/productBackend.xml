<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="proquotes_product_view" model="ir.ui.view">
        <field name="name">Backend Product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoicing']" position="after"> 
                <page string="Specifications" name="specifications">

                    <!-- design & physical -->
                    <group string="Design &amp; Physical" name="design_physical" >
                        <group string="Housing" name="housing">

                        </group>

                        <group string="Weight" name="weight">

                        </group>
                        
                        <group string="Mounting" name="mounting">

                        </group>
                    </group>

                    <!-- operation -->
                    <group string="Operation" name="operation" >
                        <group string="Control" name="control">

                        </group>

                        <group string="Wireless" name="wireless">

                        </group>
                        
                        <group string="Data Storage" name="data_storage">

                        </group>
                    </group>

                    <!-- power -->
                    <group string="Power" name="power" >
                        <group string="External" name="external">

                        </group>
                    </group>

                    <!-- scanning -->
                    <group string="Scanning" name="scanning" >
                        <group string="Distance Measurement" name="distance_measurement">

                        </group>

                        <group string="Laser Class" name="laser_class">

                        </group>
                        
                        <group string="Field of View" name="fov">

                        </group>

                        <group string="Range" name="range">

                        </group>

                        <group string="Speed" name="speed">

                        </group>
                        <group string="Density" name="density">

                        </group>
                    </group>

                    <!-- imaging -->
                    <group string="Imaging" name="imaging" >
                        <group string="Camera" name="camera">

                        </group>

                        <group string="Speed" name="speed">

                        </group>
                    </group>

                    <!-- environmental -->
                    <group string="Environmental" name="environmental" >
                        <group string="Operating Temperature" name="temperature">

                        </group>
                    </group>

                    <!-- data processing -->
                    <group string="Data Processing" name="data_processing" >
                        <group string="Data Transfer" name="data_transfer">

                        </group>

                        <group string="Desktop Software" name="desktop_software">

                        </group>
                    </group>

                </page>
            </xpath>
        </field>
    </template>
</odoo>