<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_company_wise" name="My Portal">
        <t t-call="portal.portal_layout">
            <t t-set="my_details" t-value="True"/>
            <style>
                    /* import */
                        @import url('https://fonts.googleapis.com/css2?family=Bakbak+One&amp;family=Roboto&amp;family=Source+Sans+Pro:wght@200&amp;display=swap');
                            /*
                                header - font-family: 'Bakbak One', cursive;
                                normal - font-family: 'Roboto', sans-serif;
                                small  - font-family: 'Source Sans Pro', sans-serif;
                            */
                    /* global */
                        h1, b, strong {
                            font-family: 'Bakbak One', cursive;
                        }
                        p {
                            font-family: 'Roboto', sans-serif;
                        }
                        small {
                            font-family: 'Source Sans Pro', sans-serif;
                        }
                        #wrap, main {
                            background-color: #1E2023 !important;
                        }
                        /* odoo menu */
                        #oe_main_menu_navbar {
                            background-image: url("https://media.istockphoto.com/vectors/vector-grunge-textured-background-beautiful-abstract-decorative-red-vector-id1225740014?k=20&amp;m=1225740014&amp;s=170667a&amp;w=0&amp;h=lMwbDlylYbUyU-T6IFMY7956PNhLwcPPxZB0OKkhXWw=");
                            background-position: 1 1;
                            background-size: cover;
                            border-bottom: 1px solid #333;
                        }
                        #oe_main_menu_navbar > div.o_menu_brand {
                            font-family: 'Bakbak One', cursive;
                        }
                    /* header */
                        #top > nav {
                            height: 100px;
                            background-color: #1E2023;
                        }
                        #top > nav.navbar, nav.navbar-light {
                            border-bottom: 1px solid #333 !important;
                        }
                        #wrapwrap.o_header_overlay > header:not(.o_header_affixed):not(.o_top_menu_collapse_shown) > .navbar {
                            background-color: rgb(0, 0, 0, 0.1) !important;
                        }
                        /* account */
                        #top_menu_container > ul > li > a > i {
                            color: white;
                        }
                        /* sign in */
                        #top_menu_container > ul > li > a {
                            color: white !important;
                        }
                        /* hamburger */
                        #top_menu_container > button > span {
                            display: none;
                        }
                        /* contact button */
                        #top_menu_container > div.oe_structure.oe_structure_solo.ml-3 > section > div > a {
                            display: none;
                            /*border: 1px solid #333 !important;
                            border-radius: 10px;
                            background-color: rgba(0, 0, 0, 0.1) !important;*/
                        }
                    /* content */
                        /* documents header */
                        #wrap > div > div > div.col-12.col-md.col-lg-6 > div.o_portal_my_home > h3 {
                            color: white;
                            font-family: 'Bakbak One', cursive;
                        }
                        /* documents list */
                        #wrap > div > div > div.col-12.col-md.col-lg-6 > div.o_portal_my_home > div.o_portal_docs.list-group {
                            border-radius: 10px !important;
                        }
                        /* documents list items */
                        .list-group-item {
                            color: #fff;
                            background-color: #24272A;
                            font-family: 'Roboto', sans-serif;
                        }
                        /* documents list items hover */
                        .list-group-item:hover {
                            color: #fff;
                            background-color: #2D2F32;
                        }
                        /* items number */
                        .badge-pill {
                            color: #333;
                            background-color: #db0d0d;
                        }
                    /* details */
                        /* sidebar */
                        #o_my_sidebar {
                            color: white;
                            background-color: #2D2F32;
                            padding: 25px;
                            border: 2px solid #333;
                            border-radius: 10px;
                            font-family: 'Source Sans Pro', sans-serif;
                        }
                        /* address */
                        #o_my_sidebar > div.o_portal_my_details > div:nth-child(3) {
                            margin-top: 10px;
                        }
                        /* details headers */
                        #o_my_sidebar > div.o_portal_my_details > h4, #o_my_sidebar > div.o_portal_my_security.mt-3 > h4 {
                            color: white;
                            margin-top: 25px;
                            font-family: 'Bakbak One', cursive;
                        }
                        /* header underlines */
                        #o_my_sidebar > div.o_portal_my_details > hr, #o_my_sidebar > div.o_portal_my_security.mt-3 > hr {
                            height: 1px;
                            border-bottom: 1px solid #db0d0d;
                        }
                        /* edit buttons */
                        #o_my_sidebar > div.o_portal_my_details > h4 > a, #o_my_sidebar > div.o_portal_my_details > div.manage_payment_method.mt16 > a, #o_my_sidebar > div.o_portal_my_security.mt-3 > a {
                            color: #888;
                            font-family: 'Source Sans Pro', sans-serif;
                        }
                        /* header edit hover */
                        #o_my_sidebar > div.o_portal_my_details > h4 > a:hover, #o_my_sidebar > div.o_portal_my_details > div.manage_payment_method.mt16 > a:hover, #o_my_sidebar > div.o_portal_my_security.mt-3 > a:hover {
                            text-decoration: none;
                        }
                        /* address icons */
                        #o_my_sidebar > div.o_portal_my_details > div:nth-child(3) > address > div:nth-child(2) > div.d-flex.align-items-baseline > i, #o_my_sidebar > div.o_portal_my_details > div:nth-child(3) > address > div:nth-child(2) > div:nth-child(2) > i, #o_my_sidebar > div.o_portal_my_details > div:nth-child(3) > address > div:nth-child(2) > div:nth-child(3) > i {
                            color: #888;
                        }
                    /* chatbot */
                        body > div.openerp.o_livechat_button.d-print-none.o_bottom_fixed_element {
                            color: white;
                        }
                    /* footer */
                        #bottom > div.o_footer_copyright.o_colored_level.o_cc {
                            background-color: #24272A;
                        }
                        #bottom > div.o_footer_copyright.o_colored_level.o_cc > div > div > div.col-sm.text-center.text-sm-right.o_not_editable > div {
                            display: none;
                        }
            </style>
            <div class="o_portal_my_home">
                <div class="oe_structure" id="oe_structure_portal_my_home_1"/>
                <h3>my.R-E-A-L.iT</h3>
                <t t-if="companies" t-foreach="companies" t-as="comp">
                    <h4 class="mt-4 text-primary" t-esc="comp['company_name']"/>
                    <div class="o_portal_docs_companywise list-group">
                        <t t-if="comp['company_data']" t-foreach="comp['company_data']" t-as="comp_data">
                            <a t-att-href="comp_data['url']" t-att-title="comp_data['title']" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                                <t t-esc="comp_data['title']"/>
                                <span class="badge badge-secondary badge-pill" t-esc="comp_data['placeholder_count']" t-att-data-placeholder_count="comp_data['placeholder_count']"/>
                            </a>
                        </t>
                    </div>
                </t>
            </div>
            <div class="oe_structure" id="oe_structure_portal_my_home_2"/>
        </t>
    </template>

    <template id="portal_my_rental_products" name="My Rental Products">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Rental Products</t>
            </t>
            <t t-if="not quotations">
                <p>There are currently no rental products for your account.</p>
            </t>
            <t t-if="quotations" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Order #</th>
                        <th class="text-right">Order Date</th>
                        <th class="text-right">Product</th>
                        <th class="text-center"/>
<!--                        <th class="text-right">Subtotal</th>-->
                    </tr>
                </thead>
                <t t-foreach="quotations" t-as="quotation">
                    <t t-if="quotation.order_line" t-foreach="quotation.order_line" t-as="rental">
                        <tr>
                            <td><a t-att-href="rental.order_id.get_portal_url()"><t t-esc="rental.order_id.name"/></a></td>
                            <td class="text-right"><span t-field="rental.order_id.date_order"/></td>
                            <td class="text-right"><span t-field="rental.product_id"/></td>
                            <td class="text-center">
                                <span t-if="quotation.state == 'cancel'" class="badge badge-pill badge-secondary"><i class="fa fa-fw fa-remove"/> Cancelled</span>
                                <span t-if="quotation.is_expired" class="badge badge-pill badge-secondary"><i class="fa fa-fw fa-clock-o"/> Expired</span>
                            </td>
<!--                            <td class="text-right">-->
<!--                                <span t-field="quotation.amount_total"/>-->
<!--                            </td>-->
                        </tr>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <template id="portal_my_home_menu_rental_product" name="Portal layout : rental product menu entries" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'rental_product'" class="breadcrumb-item active">
                Rental Products
            </li>
        </xpath>
    </template>

</odoo>