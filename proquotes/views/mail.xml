		<xpath expr="table" position="replace">
			<style>
                body {
                    background-color: #2D2F32;
                }
            </style>
			<div style="background-color:#2d2F32" />

			<table border="0" cellpadding="0" cellspacing="0" style="padding-top:16px;font-family:Verdana, Arial,sans-serif; color: white; width: 100%; border-collapse:separate; background-color: #2D2F32">

				<tbody>
					<tr>
						<td align="center">
							<table border="0" cellpadding="0" cellspacing="0" width="590" style="padding:16px;background-color: #FFFFFF; color: #9B9B9D; border-collapse:separate;">
								<tbody style="background-color:#1F1F1F;">
									<!-- HEADER -->
									<tr style="background-color:#1F1F1F;">
										<td align="center" style="min-width:590px;">
											<table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
												<tbody>
													<tr>
														<td colspan="100">
															<t t-if="'R-E-A-L.IT' in record.company_id.name.upper()">
																<img src="https://cdn.r-e-a-l.it//images/icons/product-cycle.gif" style="vertical-align: middle; width: 100% !important; height: auto;" alt="logo" />
															</t>
															<t t-elif="'ABTECH' in record.company_id.name.upper()">
																<img src="https://cdn.r-e-a-l.it//images/icons/REALiT-Abtech.jpg" style="vertical-align: middle; width: 100% !important; height: auto;" alt="logo" />
															</t>
														</td>
													</tr>
													<tr>
														<td valign="middle">
															<span style="font-size:10px;">Your Account</span>
															<br />
															<a href="https://my.r-e-a-l.it/" style="font-size:20px;font-weight: bold; color: #36363A; text-decoration: none;">
                                                                my.R-E-A-L.iT
                                                            </a>
														</td>
													</tr>
													<tr>
														<td colspan="2" style="text-align:center;">
															<hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin:16px 0px 16px 0px;" />
														</td>
													</tr>
												</tbody>
											</table>
										</td>
									</tr>
									<!-- CONTENT -->
									<tr>
										<td align="center" style="min-width:590px;">
											<table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
												<tbody>
													<tr>
														<td valign="top" style="font-size:13px;">
															<div>
																<h1 t-if="record.state == 'draft' or record.state == 'sent'" style="color: black;">NEW QUOTATION</h1>
																<h1 t-else="" style="color: black;">NEW PURCHASE ORDER</h1>
																<br />
																<br />
																<t t-raw="message.body" />
																<br />
																<br />

																<t t-set="access_action" t-value="record.with_context(force_website=True).get_access_action()" />
																<t t-set="is_online" t-value="access_action and access_action['type'] == 'ir.actions.act_url'" />
																<t t-set="base_url" t-value="record.get_base_url()" />
																<t t-set="share_url" t-value="is_online and record._get_share_url(redirect=True, signup_partner=notification_is_customer, share_token=notification_is_customer)" />
																<t t-set="access_url" t-value="is_online and share_url and base_url + share_url or ''" />

																<a t-if="record.state == 'draft' or record.state == 'sent'" t-att-href="access_url" style="color:#db0d0d;">
                                                                    View Quotation
                                                                </a>

																<a t-else="" t-att-href="access_url" style="color:#db0d0d;">
                                                                    View Purchase Order
                                                                </a>
																<!-- <a t-if="record.state == 'draft' or record.state == 'sent'" href="https://www.r-e-a-l.it/my/quotes" style="color:#db0d0d;">
                                                                    View Quotation
                                                                </a> -->

																<!-- <a t-else="" href="https://www.r-e-a-l.it/my/quotes" style="color:#db0d0d;">
                                                                    View Purchase Order
                                                                </a> -->
															</div>
														</td>
													</tr>
													<tr>
														<td style="text-align:center;">
															<hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;" />
														</td>
													</tr>
												</tbody>
											</table>
										</td>
									</tr>
									<!-- FOOTER -->
									<tr>
										<td align="center" style="min-width:590px;">
											<table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
												<tbody>
													<tr>
														<td valign="middle" align="left">
															<strong>R-E-A-L.iT</strong>
														</td>
													</tr>
													<tr>
														<td valign="middle" align="left" style="opacity:0.7;">
															<a href="callto:18445REALIT" style="color:#454748">+1-844-5-R-E-A-L.iT</a>
															|
															<a href="mailto:expert@r-e-a-l.it" style="color:#454748">EXPERT@R-E-A-L.iT</a>
															|
															<a href="https://www.r-e-a-l.it" style="color:#454748">https://www.r-e-a-l.it/</a>
															<!--                                                             ${object.user_id.company_id.phone}
                                                            % if object.user_id.company_id.email
                                                            | 
                                                            <a href="'mailto:%s' % ${object.user_id.company_id.email}" style="color:#454748;">
                                                                ${object.user_id.company_id.email}
                                                            </a>
                                                            % endif
                                                            % if object.user_id.company_id.website
                                                            | 
                                                            <a href="'%s' % ${object.user_id.company_id.website}" style="color:#454748;">
                                                                ${object.user_id.company_id.website}
                                                            </a>
                                                            % endif -->
														</td>
													</tr>
												</tbody>
											</table>
										</td>
									</tr>
								</tbody>
							</table>
						</td>
					</tr>
					<!-- POWERED BY -->
					<tr>
						<td align="center" style="min-width:590px;">
							<table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;color: #9B9B9D; padding: 8px; border-collapse:separate;">
								<tbody>
									<tr>
										<td style="text-align:center;font-size: 13px; color: #FFFFF">
											<strong>
												R-E-A-L.iT
												<span style="color:#db0d0d">/</span>
												<a target="_blank" href="https://www.r-e-a-l.it/" style="color:#929292;">
                                                    CAPTURE
                                                </a>
											</strong>
										</td>
									</tr>
								</tbody>
							</table>
						</td>
					</tr>
				</tbody>
			</table>
		</xpath>
	</template>

	<template id="mail_notification_paynow_online" inherit_id="sale.mail_notification_paynow_online" priority="17">
		<xpath expr="//t[@t-if=&quot;record._name == 'sale.order'&quot;]" position="after">
			<t t-if="record.state == 'draft' or record.state == 'sent'" t-set="access_name">View Quotation</t>
			<t t-else="" t-set="access_name">View Purchase Order</t>
		</xpath>
	</template>
