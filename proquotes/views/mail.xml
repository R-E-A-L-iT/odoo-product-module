<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="mail_notification_paynow" inherit_id="sale.mail_notification_paynow_online" priority="17">
        <xpath expr="//t[@t-if=&quot;record._name == 'sale.order'&quot;]" position="replace">
            <t t-if="record._name == 'sale.order'">
                <t t-set="is_transaction_pending" t-value="record.get_portal_last_transaction().state == 'pending'"/>
                <t t-set="access_name">View Quotation</t>
            </t>
        </xpath>
    </template>
    
</odoo>