<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mail_notification_borders" inherit_id="mail.mail_notification_borders" priority="17">
        <xpath expr="//tbody/tr[4]" position="replace"></xpath>
    </template>
    
    <template id="mail_notification_paynow_online" inherit_id="sale.mail_notification_paynow_online" priority="17">
        <xpath expr="//t[@t-if=&quot;record._name == 'sale.order'&quot;]" position="after">
                <t t-set="access_name">View Quotation</t>
        </xpath>
    </template>
</odoo>