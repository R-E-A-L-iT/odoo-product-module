<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mail_notification_paynow" inherit_id="mail.mail_notification_paynow" priority="17">
        <!--Select "Powered by Odoo" and remove it-->
        <xpath expr="table/tr[2]" position="replace">
            <tr>
                <td>
                    <style>
                        body {
                            background-color: #2D2F32;
                        }
                        tbody {
                            border-radius: 10px !important;
                        }
                        tr {
                            border-radius: 10px !important;
                        }
                        td {
                            border-radius: 10px !important;
                        }
                    </style>
                    <span></span>
                </td>
            </tr>
        </xpath>
        
        <!-- enter styles -->
        <xpath expr="">
            
        </xpath>
    </template>
    
    <template id="mail_notification_paynow_online" inherit_id="sale.mail_notification_paynow_online" priority="17">
        <xpath expr="//t[@t-if=&quot;record._name == 'sale.order'&quot;]" position="after">
                <t t-set="access_name" style="color: grey">View Quotation</t>
        </xpath>
    </template>
</odoo>