<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//create[1]" position="after">
                <create name="optional_product" string="Add Optional Product"/>
            </xpath>
            
            <xpath expr="//create[3]" position="after">
                <create name="multiple_choice" string="Add Multiple Choice Secion" context="{'default_display_type': 'line_section'}"/>
                <create name="optional_Section" string="Add an Optional Section" context="{'default_display_type': 'line_section'}"/> 
            </xpath>
        </field>
        
    </record>
</odoo>
