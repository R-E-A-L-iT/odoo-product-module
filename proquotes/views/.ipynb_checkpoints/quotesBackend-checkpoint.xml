<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="assets_backend" inherit_id="web.assets_backend" priority="17">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/proquotes/static/src/JS/sectionsTypes.js"/>
        </xpath>
    </template>
    
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//create[1]" position="after">
                <create name="optional_product" string="Add Optional Product"/>
            </xpath>
            
            <xpath expr="//control" position="after">
                <field name="special" invisible="1"/>
            </xpath>
            
            <xpath expr="//create[3]" position="after">
                <create name="multiple_choice" string="Add Multiple Choice Secion" context="{'default_display_type': 'line_section', 'default_special': 'multiple'}"/>
                <create name="optional_Section" string="Add an Optional Section" context="{'default_display_type': 'line_section', 'default_special': 'optional'}"/> 
            </xpath>
            
        </field>
        
    </record>
</odoo>
