<odoo>
    <template id="custom_mail_notification_layout_sale_order" inherit_id="mail.mail_notification_layout">
        <!-- Override the button link only for sale.order -->
        <xpath expr="//a[@t-att-href]" position="attributes">
            <attribute t-if="object._name == 'sale.order'" t-attf-href="/my/orders/${object.id}?access_token=${object.access_token}"/>
        </xpath>
    </template>
</odoo>
