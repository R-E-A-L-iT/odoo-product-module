<odoo>
    <template id="custom_mail_notification_layout_sale_order" inherit_id="mail.mail_notification_layout">
        <!-- Target the button link only for sale.order -->
        <xpath expr="//a[contains(@t-att-href, 'button_access')]" position="attributes">
            <attribute t-if="object._name == 'sale.order'" t-attf-href="/my/orders/%(id)s?access_token=%(access_token)s" t-options="{'id': object.id, 'access_token': object.access_token}"/>
        </xpath>
    </template>
</odoo>

