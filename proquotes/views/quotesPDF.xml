<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="sale_order_pdf_content" name="Sales Order PDF Content" inherit_id="sale.report_saleorder_document" priority="17">
        
<!--         <xpath expr="//div" position="after">
            <?xml-stylesheet href="../static/src/CSS/quotePDF.css"?>

        </xpath> -->
        
        <xpath expr="//t[@t-set=&quot;address&quot;]" position="after">
            <span><p>Testing 1</p></span>
        </xpath>
        
        <xpath expr="//t[@t-set=&quot;address&quot;]" position="before">
            <span><p>Testing 2</p></span>
        </xpath>
        
        <xpath expr="//div[@t-field=&quot;doc.partner_id&quot;]" position="after">
            <span><p>Testing 3</p></span>
        </xpath>
        
        <xpath expr="//div[@t-field=&quot;doc.partner_id&quot;]" position="before">
            <span><p>Testing 4</p></span>
        </xpath>
        
        <xpath expr="//t[@t-value=&quot;doc.with_context(lang=doc.partner_id.lang)&quot;]" position="before">
            <span><p>Testing 5</p></span>
        </xpath>
        
        <xpath expr="//t[@t-value=&quot;doc.with_context(lang=doc.partner_id.lang)&quot;]" position="after">
            <span><p>Testing 6</p></span>
        </xpath>
        
        <xpath expr="//t[@t-set=&quot;address&quot;]/div[1]" position="replace">
            <span><p>Testing 7</p></span>
        </xpath>
        
        <!--Move Cliet Info-->
        <xpath expr="//div[@t-field=&quot;doc.partner_shipping_id&quot;]" position="attributes">
            <attribute name="style">position: absolute; z-index: 2; margin-top: -250px; border: 1px solid #333;</attribute><!-- margin: auto; -->
        </xpath>
        <!--Remove Taxes-->
        <xpath expr="//th[@name=&quot;th_taxes&quot;]" position="replace"/>
        <xpath expr="//td[@name=&quot;td_taxes&quot;]" position="replace"/>
        
        <!--Remove Subtotal-->
        <xpath expr="//t[@t-if=&quot;current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')&quot;]" position="replace"/>
        
        <!-- Apply HTML-->
        <xpath expr="//span[@t-field=&quot;line.name&quot;]" position="replace">
            <t t-set="name" t-value="line.applied_name"/>
            <span t-raw="name"></span>
            
            <t t-set="description" t-value="line.name"/>
            <span t-raw="description"/>
            <span></span>
        </xpath>
        
        <!--Hide Unselected-->
        <xpath expr="//t[@t-if=&quot;not line.display_type&quot;]" position="attributes">
            <attribute name="t-if">(not line.display_type) and line.selected=='true' and line.sectionSelected=='true'</attribute>
        </xpath>
        
        <!--Remove Tax Calculation-->
        <xpath expr="//t[@t-foreach=&quot;doc.amount_by_group&quot;]" position="replace"/>
        <xpath expr="//td[@name=&quot;td_amount_total_label&quot;]" position="replace"/>
        <xpath expr="//td[@name=&quot;td_amount_total&quot;]" position="replace"/>
        
        <!--Add Signature-->
        <xpath expr="//div[@name=&quot;so_total_summary&quot;]" position="after">
            <div>
                <span style="height: 40px">Signature:_______________________________________________________________________</span>
                <span style="height: 40px;">Date:____________________________________________________________________________</span>
            </div>
            
            <!-- footer insert here -->
<!--             <p id="footer-info" t-value="sale_order_pdf_content.id"></p> -->
            <img 
                 id="insert-footer" 
                 src="https://r-e-a-l.it/CAPTURE/images/footer/Abtech_Quebec_Derek.png"
                 width="100%"
                 height="auto"
                 style="position: absolute; z-index: 2; top: 775px;"
            >
            </img>
            
        </xpath>
    </template>
    <template id="sale_order_portal_content2" name="Sales Order Portal Content" inherit_id="sale.sale_order_portal_content" priority="17">
        
    </template>
    
    <!--Apply HTML-->
    <template id="invoice_pdf_content" name="Sales Order PDF Content" inherit_id="account.report_invoice_document" priority="17">
        
        <xpath expr="//img" position="after">
             <img src="https://www.r-e-a-l.it/web/image/website/1/logo/R-E-A-L.iT%20-%20CAPTURE" width="100;" height="20px"/>
        </xpath>
         
        <!--Remove Taxes-->
        <xpath expr="//th[@name=&quot;th_taxes&quot;]" position="replace"/>
        <xpath expr="//t[@t-if=&quot;not line.display_type&quot;]/td[5]" position="replace"/> 
        
        <!--Remove Subtotal-->
        <xpath expr="//t[@t-if=&quot;current_section and (line_last or lines[line_index+1].display_type == 'line_section')&quot;]" position="replace"/>
        
        <!--Apply HTML-->
        <xpath expr="//span[@t-field=&quot;line.name&quot;]" position="replace">
            <t t-set="name" t-value="line.applied_name"/>
            <span t-raw="name"></span>
            
            <t t-set="description" t-value="line.name"/>
            <span t-raw="description"/>
        </xpath>
    </template>
</odoo>