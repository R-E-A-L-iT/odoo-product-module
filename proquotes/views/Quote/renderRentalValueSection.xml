<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_sale_order_rental_value_template" name="Sales Order Rental Value Content" inherit_id="sale.report_saleorder_document" priority="17">
        <!-- Your template content here -->

        <t t-set="formatRentalValue" t-value="'$ {value:,.2f}'.format(value= rentalValue)" t-if="clang == 'en_CA' or clang == 'en_US'" />
        <t t-elif="clang == 'fr_CA'" t-set="formatRentalValue" t-value="'{value:,.2f} $'.format(value= rentalValue)" />

        <div class="rental_product_value" t-if="clang == 'en_CA' or clang == 'en_US'">
			<span>Total Rental Value:&#160; <span t-out="rentalValueFormated" /></span>
			<br />
			<br />
			<span>Please upload your proof of insurance in the comments section below or send a copy by email.</span>
			<br />
		</div>
		<div class="rental_product_value" t-elif="clang == 'fr_ca' or true">
			<span>Valeur locative totale: &#160;<span t-out="rentalValueFormated" /></span>
			<br />
			<br />
			<span>Merci de fournir votre attestation d'assurance :</span>
			<br />
		</div>

        
