				<thead><th>name</th><th>email</th><th>name</th>picking type</thead>
				<tbody>
					<t t-foreach="[1,2,3]" t-as="i">
						<tr>
							<td>
								<input type="text" t-att-value="" t-att-id="'name-'+str(i)" t-att-name="'name-'+str(i)" />
							</td>
							<td>
								<input type="text" t-att-value="" t-att-id="'email-'+str(i)" t-att-name="'email-'+str(i)" />
							</td>
