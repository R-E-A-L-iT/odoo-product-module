<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rental_order_form_view" model="ir.ui.view">
            <field name="name">rental.order.form.inherit.view</field>
            <field name="model">sale.order</field>
            <!-- Update inherit_id with the actual module and view ID -->
            <field name="inherit_id" ref="rental.order.form" />
            <field name="arch" type="xml">
                <!-- Adjust the XPath expression to target the correct location -->
                <xpath expr="//field[@name='some_field']" position="after">
                    <label for="hello_world" string="Hello World" />
                    <div name="hello_world" class="oe_inline">
                        Hello World
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>