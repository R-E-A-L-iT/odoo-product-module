<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_portal_content" inherit_id="sale_management.sale_order_portal_content_inherit_sale_management" priority="17">
        
        <xpath expr="//t[@t-if=&quot;line.display_type == 'line_section'&quot;]/td/span" position="replace">
        
            <label t-attf-for="{{line}}{{line_index}}" style="display: inline-block; width: 100%; height: 100%;">
                <span t-field="line.name"/>
            </label>
            <input t-attf-id="{{line}}{{line_index}}" type="checkbox" value="checked" style=""/>
            
        </xpath>
        
        <xpath expr="//t[@t-if=&quot;not line.display_type&quot;]" position="before">
            <![CDATA[
                <t t-attf-t-if="not {{line}}{{line_index}}.value == 'checked'">
            ]]>
            
        </xpath>
        
        <xpath expr="//t[@t-if=&quot;not line.display_type&quot;]" position="after">
            <![CDATA[
                </t>
            ]]>
            
        </xpath>
        
    </template>
</odoo>
