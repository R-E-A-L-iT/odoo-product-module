<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Add Custom Javascript-->
    <template id="assets_frontend" inherit_id="web.assets_frontend" priority="17">
        <xpath expr="." position="inside">

            <script type="text/javascript" src="/proquotes/static/src/JS/fold.js"></script>

        </xpath>
    </template>
    
    <!--Add Checkboxes to hide/display Products-->
    <template id="sale_order_portal_content" inherit_id="sale_management.sale_order_portal_content_inherit_sale_management" priority="17">
              
        <xpath expr="//t[@t-if=&quot;line.display_type == 'line_section'&quot;]/td/span" position="replace">
        
            <label t-attf-for="fold{{line}}{{line_index}}" class="foldLabel" style="display: inline-block; width: 100%; height: 100%;">
                <span t-field="line.name"/>
            </label>
            
           <input t-attf-id="fold{{line}}{{line_index}}" type="checkbox" checked="false" style="display: none;"/>
        </xpath>
        
        <xpath expr="//t-if=&quot;current_section and (line_last or sale_order.order_line[line_index+1].display_type == 'line_section')&quot;]/tr" position="attributes">
            <attribute name="style">background-color: red;</attribute>
        </xpath>
        
    </template>
</odoo>