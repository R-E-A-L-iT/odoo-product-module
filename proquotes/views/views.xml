<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Add Custom Javascript-->
    <template id="assets_frontend" inherit_id="web.assets_frontend" priority="17">
        <xpath expr="." position="inside">

            <script type="text/javascript" src="/proquotes/static/src/JS/fold.js"></script>

        </xpath>
    </template>
    
    <!--Add Checkboxes to hide/display Products-->
    <template id="sale_order_portal_content" inherit_id="sale_management.sale_order_portal_content_inherit_sale_management" priority="17">
        
        <!--<xpath expr="" position="before">
            <t t-set="sectionClass" t-value="noSection0"/>
        </xpath>-->
        
        <xpath expr="//t[@t-if=&quot;line.display_type == 'line_section'&quot;]" position="after">
            <t t-set="sectionClass" t-attf-value="{{line}}{{line_index}}"/>
        </xpath>
        
        <!--<xpath expr="" position="attribute">
            
        </xpath>-->
        
        <xpath expr="//t[@t-if=&quot;line.display_type == 'line_section'&quot;]/td/span" position="replace">
        
            <label t-attf-for="{{line}}{{line_index}}" style="display: inline-block; width: 100%; height: 100%;">
                <span t-field="line.name"/>
            </label>
            
            <!--<input t-attf-id="{{line}}{{line_index}}" t-attf-class="fold {{line}}{{line_index}}" type="checkbox" style=""/>-->
           <input t-attf-id="{{line}}{{line_index}}" t-attf-class="foldInput {{line}}{{line_index}}" type="checkbox"/>
        </xpath>
        
    </template>
</odoo>


