<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Add Custom Javascript-->
    <template id="assets_frontend" inherit_id="web.assets_frontend" priority="17">
        <xpath expr="." position="inside">

            <script type="text/javascript" src="/proquotes/static/src/JS/fold.js"></script>

        </xpath>
    </template>
    
    <!--Add Checkboxes to hide/display Products-->
    <template id="sale_order_portal_content" inherit_id="sale_management.sale_order_portal_content_inherit_sale_management" priority="17">
        
        <xpath expr="//t[@t-if=&quot;line.display_type == 'line_section'&quot;]" position="inside">
            <t t-set="sectionClass" t-attf-value="{{line_index}}"/>
        </xpath>
        
        <xpath expr="//t[@t-foreach=&quot;sale_order.order_line&quot;]//tr//t[@t-if=&quot;not line.display_type&quot;]//td" position="attributes">
            <t t-set="sectionsClass" t-value="1"/>
            <attribute name="t-attf-class">{{line_index}}</attribute>
        </xpath>
        
        
        <xpath expr="//t[@t-if=&quot;line.display_type == 'line_section'&quot;]/td/span" position="replace">
        
            <label t-attf-for="{{line_index}}" style="display: inline-block; width: 100%; height: 100%;">
                <span t-field="line.name"/>
            </label>
            
           <input t-attf-id="{{line_index}}" t-attf-class="foldInput {{line_index}}" type="checkbox" checked="true" style="display: none;"/>
        </xpath>
        
    </template>
</odoo>