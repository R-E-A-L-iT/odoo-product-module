<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="assets_backend" inherit_id="web.assets_backend" priority="17">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/proquotes/static/src/JS/sectionsTypes.js"/>
        </xpath>
    </template>
    
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//label[@for=&quot;name&quot;]" position="after">
                <label for="name" string="Section Name" attrs="{'invisible': [('display_type', '!=', 'line_option_section')]}"/>
                <label for="name" string="Section Name" attrs="{'invisible': [('display_type', '!=', 'line_multiple_section')]}"/>
            </xpath>
            
            <xpath expr="//create[1]" position="after">
                <create name="optional_product" string="Add Optional Product"/>
            </xpath>
            
            <xpath expr="//create[3]" position="after">
                <create name="multiple_choice" string="Add Multiple Choice Secion" context="{'default_display_type': 'line_option_section'}"/>
                <create name="optional_Section" string="Add an Optional Section" context="{'default_display_type': 'line_multiple_section'}"/> 
            </xpath>
            
            <xpath expr="//t[@t-if=&quot;record.display_type.raw_value === 'line_section' || record.display_type.raw_value === 'line_note'&quot;]" position="attributes">
                <attribute name="t-if">
                    record.display_type.raw_value === 'line_section' ||
                    record.display_type.raw_value === 'line_note'||
                    record.display_type.raw_value === 'line_option_section' ||
                    record.display_type.raw_value === 'line_multiple_section'
                </attribute>
            </xpath>
        </field>
        
    </record>
</odoo>
