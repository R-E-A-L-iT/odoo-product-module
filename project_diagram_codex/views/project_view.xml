<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_task_diagram_view_form" model="ir.ui.view">
        <field name="name">project.task.diagram.view.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="diagram" widget="diagram_editor" filename="name" mode="min"/>
            </xpath>
        </field>
    </record>
</odoo>
