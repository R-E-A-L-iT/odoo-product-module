<odoo>
    <record id="action_log_lead_with_leica" model="ir.actions.server">
        <field name="name">Log Lead with Leica</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="binding_model_id" ref="crm.model_crm_lead"/>
        <field name="state">code</field>
        <field name="code">action = env['crm.lead'].browse(context.get('active_id')).action_log_lead_with_leica()</field>
    </record>

    <record id="log_lead_with_leica_button" model="ir.ui.view">
        <field name="name">Log Lead with Leica Button</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_log_lead_with_leica)d" type="action" 
                        string="Log Lead with Leica" 
                        class="oe_highlight" 
                        attrs="{'invisible': [('is_lead_logged_with_leica', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
